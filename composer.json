{
    "name": "alaa/taskmanager",
    "description": "Team-based Task Management system for Laravel with roles, notifications, localization, and config publishing.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alaa",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "illuminate/support": "^12.0",
        "spatie/laravel-permission": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Alaa\\TaskManager\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Alaa\\TaskManager\\Providers\\TaskManagerServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
} 